VERSION=@VERSION@

all:	configure src/Makefile
	make -C src

configure:	configure.ac
	./autogen.sh

src/Makefile:
	./configure

clean:
	rm -f src/*.o src/ydpdict src/*~ src/core

distclean:	clean
	rm -rf config.log config.status src/config.h src/Makefile autom4te.cache Makefile

acclean:	distclean
	rm -f configure aclocal.m4

install:
	make -C src install

tarball:	distclean
	cd ..; mv ydpdict ydpdict-$(VERSION); tar zcvf ydpdict-$(VERSION)/ydpdict-$(VERSION).tar.gz --exclude ydpdict-$(VERSION)/ydpdict-$(VERSION).tar.gz --exclude '*CVS*' ydpdict-$(VERSION); mv ydpdict-$(VERSION) ydpdict

