CC = @CC@
LIBS = @LIBS@ @YDPDICT_LIBS@ @AO_LIBS@ -lm
CFLAGS = @CFLAGS@ @YDPDICT_CFLAGS@ @AO_CFLAGS@ -Wall
OBJS = ydpconfig.o ydpsound.o ydpdict.o xmalloc.o adpcm.o

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
mandir = @mandir@

all:	ydpdict

ydpdict:	$(OBJS)
	$(CC) $(CFLAGS) -o ydpdict $(LIBS) $(OBJS)

install:
	install -d $(DESTDIR)$(bindir)
	install ydpdict $(DESTDIR)$(bindir)
	install -d $(DESTDIR)$(mandir)/man1
	install ../ydpdict.man $(DESTDIR)$(mandir)/man1/ydpdict.1
	install -d $(DESTDIR)$(mandir)/pl/man1
	install ../ydpdict.pl.man $(DESTDIR)$(mandir)/pl/man1/ydpdict.1

clean:
	rm -f ydpdict *~ core *.o
